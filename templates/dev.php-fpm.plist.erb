<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.php-fpm</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>PHP FastCGI Process Manager.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "php54::config::executable" %></string>
      <string>-c</string>
      <string><%= scope.lookupvar "php54::config::configfile" %></string>
      <string>--fpm-config</string>
      <string><%= scope.lookupvar "php54::config::fpmconfigfile" %></string>
      <string>--nodaemonize</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "php54::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "php54::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "php54::config::logdir" %>/console.log</string>
</dict>
</plist>
